<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:padding="50dp"
    android:orientation="vertical"
    android:background="@drawable/backgrounds"
    tools:context=".Fragments.RequestSong">
  <!--  <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Request Music "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />-->

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="6dp"
      android:layout_marginTop="20dp"
      >
    <EditText
        android:id="@+id/esongname"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="Song Name"
        android:padding="10dp"
        android:drawableLeft="@drawable/song"
        android:inputType="textVisiblePassword"
        android:layout_marginBottom="10dp"
        android:textSize="16dp" />
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      app:cardCornerRadius="6dp"
      >

    <EditText
        android:id="@+id/esingername"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/person"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Singer Name (not mandatory)"
        android:inputType="textVisiblePassword"
        android:padding="10dp"
        android:textSize="16dp" />
  </android.support.v7.widget.CardView>
  <Button
      android:id="@+id/rbtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="9dp"
      android:padding="10dp"
      android:layout_gravity="center"
      android:text="Request"
      android:textColor="#045"
      android:textSize="15sp"
      android:textStyle="bold" />



</LinearLayout>