<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/aframe"
    android:padding="10dp"
    android:background="@drawable/backgrounds"
    tools:context=".AdminMain">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#ffff"
        android:foregroundGravity="center"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        app:contentPadding="5dp"
        app:cardElevation="2dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Category"
            android:gravity="center"
            android:drawableLeft="@drawable/options"
            android:id="@+id/ecat"
            android:background="#0000"
            />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#897"
            android:foregroundGravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/uploadbtn"
            android:clickable="true"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            app:contentPadding="5dp"
            app:cardElevation="2dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cagliostro"
                android:gravity="center"
                android:hint="Upload Song"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:clickable="true"
            app:cardBackgroundColor="#789"
            android:foregroundGravity="center"
            android:layout_weight="1"
            android:id="@+id/requestsbtn"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            app:contentPadding="5dp"
            app:cardElevation="2dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/cagliostro"
                android:gravity="center"
                android:hint="Request Song"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>