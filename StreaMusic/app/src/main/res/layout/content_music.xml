<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame"
    android:background="@drawable/backgrounds"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MusicActivity"
    tools:showIn="@layout/app_bar_music">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="60dp">

            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/trendingbtn"
                android:clickable="true"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="TRENDING"
                    android:textColor="#5e1711"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:id="@+id/tophindibtn"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="TOP HINDI"
                    android:textColor="#5e1711"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:id="@+id/topenglishbtn"
                app:cardCornerRadius="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="TOP ENGLISH"
                    android:textColor="#5e1711"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/artistsbtn"
                android:clickable="true"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="ARTISTS"
                    android:textColor="#5e1711"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:id="@+id/regionalbtn"
                android:clickable="true"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:text="REGIONAL"
                    android:textColor="#5e1711"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:id="@+id/genrebtn"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:fontFamily="@font/cagliostro"
                    android:gravity="center"
                    android:lineSpacingExtra="10sp"
                    android:text="GENRE"
                    android:textColor="#5e1711"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>